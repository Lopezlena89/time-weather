// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique  
  password      String
}

model Reminders {
  id           String     @id @default(uuid())
  userId       String
  title        String 
  date         String
  theme        String
}
model WeatherData {
  id           String     @id @default(uuid())
  userId       String
  cityName     String 
  icon         String
  desc         String
  Temp         Int
  Min          Int
  Max          Int
}
